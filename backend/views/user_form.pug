extends layout 

block content 

    h1=title 

    form(action="", method="post") 
        label(for="name") Name: 
        input(type="text", name='name', value='') 
        br
        label(for="weight") Weight: 
        input(type="number",name='weight', value='') 
        br
        label(for="height") Height: 
        input(type="number",name='height', value='') 
        br
        button(type="submit") Submit

    if errors 
        ul 
        for error in errors 
            li!= error.msg